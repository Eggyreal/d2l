#装饰器的用法
def decorator(func):
    def wrapper(*arg,**kwargs):
        print('Function is about to execute')
        result = func(*arg,**kwargs)
        print('Function has executed')
        return result
    return wrapper
@decorate
def say_hello():
    print("Hello, world!")

say_hello()

